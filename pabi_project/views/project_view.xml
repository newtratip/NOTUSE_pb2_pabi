<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Project -->
        <record id="view_project" model="ir.ui.view">
            <field name="name">view.project</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project"/>
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="number"/>
                </field>
                <field name="partner_id" position="after">
                    <field name="amount_budget" sum="Total Budget"/>
                </field>
                <field name="planned_hours" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
                <field name="total_hours" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
                <field name="effective_hours" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
            </field>
        </record>
        <record id="edit_project" model="ir.ui.view">
            <field name="name">edit.project</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <h1 position="after">
                    <h2>
                        <field name="number" class="oe_inline"/>
                    </h2>
                </h1>
                <button name="reset_project" position="attributes">
                    <attribute name="invisible">True</attribute>
                </button>
                <button name="set_template" position="attributes">
                    <attribute name="invisible">True</attribute>
                </button>
                <field name="state" position="attributes">
                    <attribute name="invisible">context.get('template', False)</attribute>
                </field>
                <group position="after">
                    <group>
                        <group>
                            <field name="section_id"/>
                            <field name="org_id"/>
                            <field name="mission_id"/>
                        </group>
                        <group>
                            <field name="amount_budget"/>
                            <field name="fund_id"/>
                        </group>
                    </group>
                </group>
                <xpath expr="/form/sheet/notebook//page[@string='Other Info']//group[@string='Administration']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
                <xpath expr="/form/sheet/notebook//page[@string='Other Info']//group[@name='misc']" position="replace"/>
                <xpath expr="/form/sheet/notebook//page[@string='Other Info']" position="inside">
                    <group string="Miscellaneous" name="misc">
                        <group >
                            <field name="month_duration"/>
                            <field name="date_start" string="Start Date"/>
                            <field name="date" string="End Date"/>
                            <field name="sequence" groups="base.group_no_one"/>
                            <field name="active" attrs="{'invisible':[('state','in',['open', 'pending', 'template'])]}"/>
                            <field name="currency_id" invisible="1" groups="base.group_multi_currency" required="1"/>
                            <field name="parent_id" invisible="1" string="Parent" help="Append this project to another one using analytic accounts hierarchy" domain="[('id','!=',analytic_account_id)]" context="{'current_model': 'project.project'}"/>
                        </group>
                        <group>
                            <field name="operation_area"/>
                            <field name="date_expansion"/>
                            <field name="approval_info"/>
                            <field name="project_readiness"/>
                            <field name="reason"/>
                            <field name="expected_result"/>
                        </group>
                    </group>
                </xpath>
                <xpath expr="/form/sheet/notebook//page[@string='Other Info']//group[@string='Administration']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
            </field>
        </record>

        <!-- remove kanban view on project menu -->
        <record id="project.open_view_project_all" model="ir.actions.act_window">
            <field name="view_mode">tree,form,gantt</field>
        </record>
        <record id="project.act_project_project_2_project_task_all" model="ir.actions.act_window">
            <field name="view_mode">tree,form,gantt</field>
        </record>

        <!-- new project temmplate menu -->
        <record id="open_view_project_template" model="ir.actions.act_window">
            <field name="name">Project Template</field>
            <field name="res_model">project.project</field>
            <field name="view_type">form</field>
            <field name="domain">[('state', '=', 'template')]</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="project.view_project_project_filter"/>
            <field name="context">{'default_state': 'template', 'template': True}</field>
        </record>
        <menuitem action="open_view_project_template" id="menu_project_tempalte" name="Project Template" parent="base.menu_definitions" sequence="0"/>


        <!-- Task -->
        <record id="view_task_tree2" model="ir.ui.view">
            <field name="name">project.task.tree</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_tree2"/>
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="number"/>
                </field>
            </field>
        </record>
        <record id="view_task_form2" model="ir.ui.view">
            <field name="name">view.task.form2</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <h1 position="after">
                    <h2>
                        <field name="number" class="oe_inline"/>
                    </h2>
                </h1>
                <xpath expr="/form/sheet/group//field[@name='date_deadline']" position="before">
                    <field name="amount_budget"/>
                </xpath>
                <xpath expr="/form/sheet/notebook//page[@string='Extra Info']//field[@name='date_start']" position="before">
                    <field name="month_duration"/>
                </xpath>
                <xpath expr="/form/sheet/notebook//page[@string='Extra Info']//field[@name='date_end']" position="after">
                    <field name="date_expansion"/>
                </xpath>
                <xpath expr="/form/sheet/notebook//page[@string='Extra Info']//field[@name='date_last_stage_update']" position="after">
                    <field name="contract_day_duration"/>
                    <field name="date_contract_start"/>
                    <field name="contract_number"/>
                </xpath>
            </field>
        </record>

        <!-- remove kanbank view -->
        <record id="project.action_view_task" model="ir.actions.act_window">
            <field name="view_mode">tree,form,calendar,gantt,graph</field>
            <field name="context">{'search_default_project': 1}</field>
        </record>
        <record id="project.open_view_task_list_kanban" model="ir.actions.act_window.view">
            <field name="sequence" eval="100"/>
        </record>
    </data>
</openerp>
