<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">
        <!-- delete unused stage -->
        <delete model="project.task.type" search="[('id', '=', ref('project.project_tt_analysis'))]" />
        <delete model="project.task.type" search="[('id', '=', ref('project.project_tt_specification'))]" />
        <delete model="project.task.type" search="[('id', '=', ref('project.project_tt_design'))]" />
        <delete model="project.task.type" search="[('id', '=', ref('project.project_tt_development'))]" />
        <delete model="project.task.type" search="[('id', '=', ref('project.project_tt_testing'))]" />
        <delete model="project.task.type" search="[('id', '=', ref('project.project_tt_merge'))]" />
        <delete model="project.task.type" search="[('id', '=', ref('project.project_tt_deployment'))]" />
        <delete model="project.task.type" search="[('id', '=', ref('project.project_tt_cancel'))]" />

        <!-- create new stage -->
        <record id="project_tt_draft" model="project.task.type">
            <field name="name">Draft</field>
            <field name="case_default">True</field>
            <field name="sequence">10</field>
        </record>
        <record id="project_tt_submit" model="project.task.type">
            <field name="name">Submit</field>
            <field name="case_default">True</field>
            <field name="sequence">20</field>
        </record>
        <record id="project_tt_approved" model="project.task.type">
            <field name="name">Approved</field>
            <field name="case_default">True</field>
            <field name="sequence">30</field>
        </record>
        <record id="project_tt_cancel" model="project.task.type">
            <field name="name">Cancel</field>
            <field name="case_default">True</field>
            <field name="sequence">40</field>
        </record>
        <record id="project_tt_close" model="project.task.type">
            <field name="name">Close</field>
            <field name="case_default">True</field>
            <field name="sequence">50</field>
        </record>
        <record id="project_tt_delete" model="project.task.type">
            <field name="name">Delete</field>
            <field name="case_default">True</field>
            <field name="sequence">60</field>
        </record>

        <!-- Template for Construction Project -->
        <record id="project_template_construction" model="project.project">
            <field name="name">โครงการก่อสร้าง.....</field>
            <field name="number">/</field>
            <field name="state">template</field>
        </record>
        <record id="project_task_1_design" model="project.task">
            <field name="name">01 งานออกแบบ</field>
            <field name="number">/</field>
            <field name="sequence">1</field>
            <field name="project_id" ref="pabi_project.project_template_construction"/>
        </record>
        <record id="project_task_2_construction" model="project.task">
            <field name="name">02 งานก่อสร้าง</field>
            <field name="number">/</field>
            <field name="sequence">2</field>
            <field name="project_id" ref="pabi_project.project_template_construction"/>
        </record>
        <record id="project_task_3_control" model="project.task">
            <field name="name">03 ควบคุมงาน</field>
            <field name="number">/</field>
            <field name="sequence">3</field>
            <field name="project_id" ref="pabi_project.project_template_construction"/>
        </record>
        <record id="project_task_4_others" model="project.task">
            <field name="name">04 งานอื่นๆ</field>
            <field name="number">/</field>
            <field name="sequence">4</field>
            <field name="project_id" ref="pabi_project.project_template_construction"/>
        </record>
        <record id="project_task_5_procurement" model="project.task">
            <field name="name">05 จัดซื้อจัดหา</field>
            <field name="number">/</field>
            <field name="sequence">5</field>
            <field name="project_id" ref="pabi_project.project_template_construction"/>
        </record>

    </data>
</openerp>
