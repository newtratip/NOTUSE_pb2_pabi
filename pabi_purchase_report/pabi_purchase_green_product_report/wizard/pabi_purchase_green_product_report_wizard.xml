<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="pabi_purchase_summarize_report_wizard" model="ir.ui.view">
            <field name="name">PABI Purchase Summarize Report</field>
            <field name="model">pabi.purchase.summarize.report.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Selection Criteria">
                    <group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group>
                            <field name="format"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Run Report" name="run_report" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_pabi_purchase_summarize_report_wizard" model="ir.actions.act_window">
            <field name="name">PABI Purchase Summarize Report</field>
            <field name="res_model">pabi.purchase.summarize.report.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="pabi_purchase_summarize_report_wizard"/>
            <field name="target">new</field>
            <field name="help">Print PABI Purchase Summarize Report</field>
        </record>

        <menuitem id="menu_pabi_purchase_summarize_report_wizard" action="action_pabi_purchase_summarize_report_wizard" parent="pabi_purchase_report.menu_purchase_report" sequence="110"/>

    </data>
</openerp>
